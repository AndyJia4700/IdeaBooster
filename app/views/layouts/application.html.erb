<!DOCTYPE html>
<html>
  <head>
    <title>IdeaBooster</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta property="og:title" content="IdeaBooster" />    
    <meta property="og:url" content="https://idea-booster.herokuapp.com/#/" />    
    <meta property="og:image" content="<%= image_url('ideaBooster.png') %>" />       
    <meta property="og:description" content="This is a full-stack Project, the KickStarter Clone." />    

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script>
      window.ideaBoosterURL = "<%= image_url('ideaBooster.png')%>"
      window.githubURL = "<%= image_url('github.png')%>"
      window.linkedinURL = "<%= image_url('linkedin.png')%>"
      window.angellistURL = "<%= image_url('angellist.png')%>"
      window.personalsiteURL = "<%= image_url('personalsite.png')%>"
      window.likeURL = "<%= image_url('like.png')%>"
      window.dislikeURL = "<%= image_url('dislike.png')%>"
    </script>

    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>,
          "username": "<%= current_user.username %>",
          "email": "<%= current_user.email %>"
        };

        window.welcomeURL = "<%= image_url('giphy.gif')%>"
        window.userURL = "<%= image_url('user.png')%>"
        window.basicsURL = "<%= image_url('basics.png')%>"
        window.fundingURL = "<%= image_url('funding.png')%>"
        window.rewardsURL = "<%= image_url('rewards.png')%>"
        window.storyURL = "<%= image_url('story.png')%>"
        window.peopleURL = "<%= image_url('people.png')%>"
        window.paymentURL = "<%= image_url('payment.png')%>"
        window.promotionURL = "<%= image_url('promotion.png')%>"
      </script>      
    <% end %>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
